﻿@model List<BooklyProject.Entities.Book>

<div class="col-md-6 mb-4 mb-lg-0 col-lg-3">
    <div class="best-reviewed border rounded-3 p-4">
        <div class="section-title overflow-hidden mb-5 mt-2">
            <h3 class="d-flex flex-column mb-0">Öne Çıkanlar</h3>
        </div>
        <div class="items-lists">
            @{
                var totalItems = Model.Count();
            }
            @foreach (var item in Model.Select((value, index) => new { value, index }))
            {

                <div class="item d-flex">
                    <img src="@item.value.CoverImageUrl" class="img-fluid shadow-sm" alt="product item">
                    <div class="item-content ms-3">
                        <h6 class="mb-0 fw-bold"><a href="index.html">@item.value.BookName</a></h6>
                        <div class="review-content d-flex">
                            <p class="my-2 me-2 fs-6 text-black-50">@item.value.Author.Name @item.value.Author.Surname </p>
                            <div class="rating text-warning d-flex align-items-center">
                                @for (int i = 0; i < item.value.Review; i++)
                                {
                                    <svg class="star star-fill">
                                        <use xlink:href="#star-fill"></use>
                                    </svg>
                                }
                            </div>
                        </div>
                        <span class="price text-primary fw-bold mb-2 fs-5">
                            @(item.value.IsOnSale ? item.value.Price * (100 - item.value.DiscountRate) / 100 : item.value.Price)
                            <span style="color:black; opacity:50%; text-decoration: line-through;">@item.value.Price</span>
                           

                        </span>

                    </div>
                </div>

                if (item.index < totalItems - 1)
                {
                    <hr />
                }
            }
        </div>
    </div>
</div>
